/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.list_item{margin-bottom: 15px; border-bottom: 1px solid #ddd;padding-bottom: 10px;position: relative;}
.header{width: 100%; position: relative;background: #6810cb;z-index: 2}
.header_text{display: block; width: 100%;line-height: 44px;text-align: center; color: #fff}
.some_list{width: 100%; box-sizing: border-box;padding: 10px 15px;position: absolute;top:44px;padding-bottom: 40px;}
page{
  height:100%; 
  overflow-x: hidden; 
}
.back_img{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.plus_img{
  position: absolute;
  right:50px;
  top:12px;
  width:20px;
  height:20px;
}
.editor_icon{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 15px;
  top:12px;
}
.list_time{font-size: 12px;}
.list_title{font-size: 15px; margin: 10px 0;}
.list_text{font-size: 12px; color: #757677}
.create_time{ color: #62aede;font-size: 13px;margin-right: 10px;}
.list_pad{padding-left: 40px; transition:  all 0.3s;}
.list_check{position: absolute;top:5px;left:0px;width: 20px;height: 20px;}
.hide{display: none;}
.show{display: block;}
.bottom_btn_box{position: fixed;bottom: 0; left: 0;width:90%;text-align: right;}
.editor_btn,.delete_btn{display: inline-block;width: 80px; line-height: 30px; background: #6810cb; color: #fff; font-size: 14px;margin: 5px 0;}
.editor_btn{margin-right: 10px;}




