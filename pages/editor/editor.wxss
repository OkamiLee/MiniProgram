/* pages/editor/editor.wxss */
.editor_box{position: relative;}

.header{width: 100%;position: relative;background: #6810cb;z-index: 2}
.header_text{display: block; width: 100%;line-height: 44px;text-align: center; color: #fff}
.editor_text{width: 100%; max-height: 400px;border: 1px solid #ddd;margin-top: 10px}

.btn{
  display: block;
  margin: 30px auto;
  width: 80%;
  line-height: 44px;
  background: #ff5001;
  color: #fff;
}
.back{
  position: absolute;
  top: 10px;
  left: 15px;
  width: 24px;
  height: 24px;
}
page{height: 100%}
.modelBack{position: fixed;top:0;left:0;width: 100%;height: 100%;}
.picker{width: 90%;  border: 1px solid #999;margin: 10px auto; box-sizing: border-box;padding: 10px; border-radius:3px; }
.title_inp{width: 90%;height: 36px; border: 1px solid #999; margin: 10px auto; box-sizing: border-box;padding:0 10px; border-radius:3px;}
.content_text{width: 90%;border: 1px solid #999; margin: 0 auto;height: 300px; box-sizing: border-box;padding: 10px; border-radius:3px;}
.model_btn{width: 80%;display: block;margin: 20px auto; background: #8130dc; line-height: 44px; color: #fff;}



